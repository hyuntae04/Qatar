<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="goodsMapper">
    <insert id="add" parameterType="goodsDTO">
        INSERT INTO `goods`(`goods_name`,`goods_prices`,`goods_selling_YN`, `goods_imgurl`)
        VALUES(#{name}, #{price}, 'YES', #{imgurl})
    </insert>

    <select id="selectAll" resultType="hashMap" parameterType="hashMap">
        SELECT `id`, `goods_name`, `goods_prices`, `goods_selling_YN`, `goods_imgurl`
        FROM `goods`
        ORDER BY `id` DESC
    </select>
</mapper>